<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        Background="Gray">
    <Grid>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Margin="0,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" Height="55"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="194" Height="55"/>
        <Button Click="LoginButton_Click" Content="Войти" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Height="43" Width="104" FontWeight="Bold" Cursor="Hand"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Foreground="Black"><Run Text="Введите "/><Run Language="ru-ru" Text="Логин"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Text="Введите "/><Run Language="ru-ru" Text="Пароль"/><Run Text=":"/></TextBlock>

    </Grid>
</Window>
